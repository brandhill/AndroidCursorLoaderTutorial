<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.github.browep.cursorloader"
      android:versionCode="1"
      android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />    
    
    <application android:label="@string/app_name" >
        <activity android:name=".SimpleCursorLoader"
                  android:label="@string/app_name">

        </activity>

        <activity android:name=".ListViewCursorLoader"
                  android:label="@string/app_name">

        </activity>

        <activity android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider android:name="com.github.browep.cursorloader.SlowContentProvider"
                  android:authorities="com.github.browep.cursorloader.data"
                />
    </application>
</manifest> 
